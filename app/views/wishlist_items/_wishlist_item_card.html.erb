<%= turbo_frame_tag(wishlist_item) do %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="d-flex flex-wrap justify-content-between">
        <div class="d-flex align-items-center">
          <h3 class="mb-0 me-2"><%= wishlist_item.name %></h3>
          <%= number_to_currency(wishlist_item.price) %>
        </div>

        <div class="d-flex align-items-center">
          <%= link_to([wishlist, wishlist_item], class: "btn btn-secondary me-2", data: { turbo_frame: "_top" }) do %>
            <i class="bi bi-arrows-angle-expand"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
