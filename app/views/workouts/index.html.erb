<div class="d-flex">
  <h1 class="h1 mb-3"><%= t(".title") %></h1>
</div>
<div id="workouts">
  <% @workouts.each do |workout| %>
    <div class="card mb-3">
      <div class="card-body">
        <%= render workout %>
        <%= link_to t(".view_workout"), workout, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New workout", new_workout_path %>
