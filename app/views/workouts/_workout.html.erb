<%= turbo_frame_tag(workout) do %>
  <div class="d-flex flex-wrap justify-content-between mb-3">
    <div class="d-flex align-items-center">
      <h1 class="mb-0 me-2"><%= workout.name %></h1>
      <% if workout.completed? %>
        <span class="badge rounded-pill bg-success mx-1"><%= t("workouts.statuses.completed") %></span>
      <% elsif workout.in_progress? %>
        <span class="badge rounded-pill bg-primary mx-1"><%= t("workouts.statuses.in_progress") %></span>
      <% else %>
        <span class="badge rounded-pill bg-secondary mx-1"><%= t("workouts.statuses.draft") %></span>
      <% end %>
    </div>

    <div class="d-flex align-items-center">
      <% if workout.draft? %>
        <%= button_to(t(".start"), start_workout_path(workout), method: :patch, class: "btn btn-primary me-2") %>
      <% end %>
      <% if workout.in_progress? %>
        <%= button_to(t(".complete"),
                      complete_workout_path(workout),
                      method: :patch,
                      form: { data: { turbo_confirm: t(".complete_confirmation") } },
                      class: "btn btn-success me-2") %>
      <% end %>
      <%= link_to(edit_workout_path(workout), class: "btn btn-secondary me-2") do %>
        <i class="bi bi-pencil"></i>
      <% end %>
    </div>
  </div>

  <% if workout.started? %>
    <table class="table xxsmall-width">
      <tbody>
          <tr>
            <th scope="row"><%= Workout.human_attribute_name("started_at") %></th>
            <td><%= workout.started_at&.to_fs(:timestamp) %></td>
          </tr>
        <% if workout.completed? %>
          <tr>
            <th scope="row"><%= Workout.human_attribute_name("completed_at") %></th>
            <td><%= workout.completed_at&.to_fs(:timestamp) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
