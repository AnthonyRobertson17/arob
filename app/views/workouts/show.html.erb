<div id="<%= dom_id @workout %>">
  <h1 class="h1 mb-3"><%= @workout.name %></h1>
  <%= render "workout_attributes", workout: @workout, hide_name: true %>
</div>

<h3 class="h3 mb-3"><%= t(".exercises") %></h3>
<% @workout.exercises.each do |exercise| %>
  <div class="card mb-3">
    <div id="<%= dom_id exercise %>" class="card-body">
      <%= render exercise %>
    </div>
  </div>
<% end %>

<div class="d-flex">
  <% if @workout.draft? %>
    <%= button_to t(".start"), start_workout_path(@workout), method: :patch, class: "btn btn-primary me-2" %>
  <% end %>
  <% if @workout.in_progress? %>
    <%= button_to t(".complete"), complete_workout_path(@workout), method: :patch, class: "btn btn-success me-2" %>
  <% end %>
  <%= link_to t(:edit), edit_workout_path(@workout), class: "btn btn-secondary me-2" %>
  <%= button_to t(:destroy), @workout, method: :delete, class: "btn btn-danger" %>
</div>
