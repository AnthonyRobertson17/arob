<%= simple_form_for(putting_practice_session, html: { class: "mb-3" }) do |f| %>
  <h3 class="mb-0 me-2"><%= Time.zone.now.to_fs(:date) %></h3>
  <%= f.input :hole_size, as: :check_boxes, collection: PuttingPracticeSession.hole_sizes.to_a.collect{|c| [c[0].titleize, c[0]]} %>
  <%= f.input :hole_distance, input_html: { step: 0.1 } %>
  <%= f.button(:submit, class: "btn btn-success") %>
  <%= link_to(t(:cancel), cancel_path, class: "btn btn-secondary") %>
  <% if putting_practice_session.persisted? %>
    <%= link_to(putting_practice_session,
            data: {
              turbo_method: :delete,
              turbo_confirm: t("putting_practice_session.destroy_confirmation"),
              turbo_frame: "_top",
            },
            class: "btn btn-danger") do %>
      <i class="bi bi-trash3"></i>
    <% end %>
  <% end %>
<% end %>
