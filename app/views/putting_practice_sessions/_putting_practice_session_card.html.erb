<%= turbo_frame_tag(putting_practice_session) do %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="d-flex flex-wrap justify-content-between">
        <div class="d-flex align-items-center">
          <h3 class="mb-0 me-2"><%= putting_practice_session.created_at.to_fs(:date) %></h3>
          <span class="badge rounded-pill bg-success mx-1"><%= putting_practice_session.hole_size %></span>
          <span class="badge rounded-pill bg-primary mx-1"><%= putting_practice_session.hole_distance %></span>
        </div>

        <div class="d-flex align-items-center">
          <%= link_to(putting_practice_session, class: "btn btn-secondary me-2", data: { turbo_frame: "_top" }) do %>
            <i class="bi bi-arrows-angle-expand"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
