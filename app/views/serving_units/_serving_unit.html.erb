<%= turbo_frame_tag(serving_unit) do %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="d-flex flex-wrap justify-content-between">
        <div class="d-flex align-items-center">
          <h3>
            <% if serving_unit.abbreviated? %>
              <%= serving_unit.name %> (<%= serving_unit.abbreviated_name %>)
            <% else %>
              <%= serving_unit.name %>
            <% end %>
          </h3>
        </div>
        <div class="d-flex align-items-center">
          <%= link_to(serving_unit, class: "btn btn-secondary me-2", data: { turbo_frame: "_top" }) do %>
            <i class="bi bi-arrows-angle-expand"></i>
          <% end %>
          <%= link_to(edit_serving_unit_path(serving_unit), class: "btn btn-secondary me-2") do %>
            <i class="bi bi-pencil"></i>
          <% end %>
          <%= button_to(serving_unit,
                        method: :delete,
                        form: { data: { turbo_confirm: t(".destroy_confirmation") } },
                        class: "btn btn-danger" ) do %>
            <i class="bi bi-trash3"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
