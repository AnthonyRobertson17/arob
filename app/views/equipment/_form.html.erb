<div class="card mb-3">
  <div class="card-body">
    <%= simple_form_for(equipment) do |f| %>
      <%= f.input(:name) %>
      <%= f.input(:gym_ids, as: :check_boxes, collection: gyms) %>
      <%= f.button(:submit) %>
      <%= link_to(t(:cancel), equipment_index_path, class: "btn btn-secondary") %>
    <% end %>
  </div>
</div>
