<%= turbo_frame_tag(exercise_type) do %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="h5"><%= exercise_type.name %></h5>
      <div class="d-flex">
        <%= link_to(t(:open), exercise_type, class: "btn btn-primary me-2", data: { turbo_frame: "_top" }) %>
        <%= link_to(edit_exercise_type_path(exercise_type), class: "btn me-2") do %>
          <i class="bi bi-pencil"></i>
        <% end %>
        <%= button_to(exercise_type,
                      method: :delete,
                      form: { data: { turbo_confirm: t(".destroy_confirmation") } },
                      class: "btn btn-danger" ) do %>
          <i class="bi bi-trash3"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
