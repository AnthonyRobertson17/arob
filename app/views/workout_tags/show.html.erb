<div id="<%= dom_id @workout_tag %>">
  <h1 class="h1 mb-3"><%= @workout_tag.name %></h1>
  <%= render "tags/tag", tag: @workout_tag, hide_name: true %>
</div>

<div class="d-flex">
  <%= link_to t(:edit), edit_workout_tag_path(@workout_tag), class: "btn btn-secondary me-2" %>
  <%= button_to t(:destroy), @workout_tag, method: :delete, class: "btn btn-danger" %>
</div>
