<div class="card mb-3">
  <div class="card-body">
    <%= simple_form_for [workout, exercise] do |f| %>
      <%= f.association :exercise_type, as: :radio_buttons, collection: exercise_types %>
      <%= f.input :note %>
      <%= f.submit class: "btn btn-primary me-2" %>
      <%= link_to(t(:cancel), workout_path(workout), class: "btn btn-secondary me-2") %>
      <%= link_to(t(:destroy),
                  [workout, exercise],
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: t("exercises.destroy_confirmation"),
                    turbo_frame: dom_id(exercise),
                  },
                  class: "btn btn-danger") %>
    <% end %>
  </div>
</div>
