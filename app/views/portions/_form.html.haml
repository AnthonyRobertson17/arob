.card.mb-3
  .card-body
    = simple_form_for [meal, portion] do |f|
      = f.association :food, as: :radio_buttons, collection: current_user.foods
      = f.association :food_group, as: :radio_buttons, collection: current_user.food_groups
      = f.input :serving_quantity
      = f.submit class: "btn btn-primary me-2"
      = link_to(t(:cancel), meal_path(meal), class: "btn btn-secondary me-2")
      = link_to([meal, portion],                             |
        data: {                                              |
          turbo_method: :delete,                             |
          turbo_confirm: t("portions.destroy_confirmation"), |
          turbo_frame: dom_id(meal),                         |
        },                                                   |
        class: "btn btn-danger") do                          |
        %i.bi.bi-trash3
