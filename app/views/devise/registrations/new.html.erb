<div data-turbo="false">
  <h2><%= t(".sign_up") %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "d-block" %>
      <%= render "devise/shared/form_error", attribute: :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <div>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t(".characters_minimum") %>)</em>
        <% end %>
      </div>
      <%= render "devise/shared/form_error", attribute: :password %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "d-block" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t(".sign_up") %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
