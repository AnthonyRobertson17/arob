<div class="my-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to t(:log_in), new_session_path(resource_name), class: "d-block" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t(:sign_up), new_registration_path(resource_name), class: "d-block" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t("devise.shared.forgot_your_password"), new_password_path(resource_name), class: "d-block" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t("devise.shared.confirmation_instructions_question"), new_confirmation_path(resource_name), class: "d-block" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t("devise.shared.unlock_instructions_question"), new_unlock_path(resource_name), class: "d-block" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to t("devise.shared.omniauth_sign_in", provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), method: :post, class: "d-block" %>
    <% end %>
  <% end %>
</div>
