<div id="<%= dom_id @exercise_category %>">
  <h1 class="h1 mb-3"><%= @exercise_category.name %></h1>
  <%= render @exercise_category, hide_name: true %>
</div>

<div class="d-flex">
  <%= link_to t(:edit), edit_exercise_category_path(@exercise_category), class: "btn btn-secondary me-2" %>
  <%= button_to t(:destroy), @exercise_category, method: :delete, class: "btn btn-danger" %>
</div>
