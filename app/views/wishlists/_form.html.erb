<%= simple_form_for(wishlist, html: { class: "mb-3" }) do |f| %>
  <%= f.input(:name) %>
  <%= f.button(:submit, class: "btn btn-success me-2") %>
  <%= link_to(t(:cancel), cancel_path, class: "btn btn-secondary") %>
  <%= link_to(wishlist,
          data: {
            turbo_method: :delete,
            turbo_confirm: t("wishlists.destroy_confirmation") ,
            turbo_frame: "_top"
          },
          class: "btn btn-danger") do %>
    <i class="bi bi-trash3"></i>
  <% end %>
<% end %>
